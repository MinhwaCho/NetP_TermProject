	// Getter
	public int getRow() {
		return ROWS;
	}
	public int getCol() {
		return COLS;
	}
	public int getUnit() {
		return UNIT;
	}

	public int getXY(int row, int col) {
		return map[col][row];
	}
	
	// map 그리기
	public void paintComponent(Graphics g) {
		super.paintComponent(g);
		for(int i = 0; i < COLS; i++) {
			for (int j = 0; j < ROWS; j++) {
				if (getXY(i, j) == 1)	g.setColor(Color.DARK_GRAY);
				else 					g.setColor(Color.LIGHT_GRAY);
				g.fillRect(i*UNIT, j*UNIT, UNIT, UNIT);
			}
		}
	}
	
	class PlayerKeyboardListener extends KeyAdapter{
		private int checkXY(int x, int y) {
			return mapPanel.getXY(x/mapPanel.getUnit(), y/mapPanel.getUnit());
		}
		
		public void keyPressed(KeyEvent e) {
			int x = player.getX();
			int y = player.getY();
			int keyCode = e.getKeyCode();
			
			System.out.println(x + ", " + y + ", " + keyCode);
			
			switch(keyCode) {
			case KeyEvent.VK_UP:
				if((checkXY(x, y)) != 1 && y > 0)
					player.setLocation(x, y - mapPanel.getUnit());
				break;
			case KeyEvent.VK_DOWN:
				if((checkXY(x, y)) != 1 && y < 400)
					player.setLocation(x, y + mapPanel.getUnit());
				break;
			case KeyEvent.VK_LEFT:
				if((checkXY(x, y)) != 1 && x > 0)
					player.setLocation(x - mapPanel.getUnit(), y);
				break;
			case KeyEvent.VK_RIGHT:
				if((checkXY(x, y)) != 1 && x < 400)
					player.setLocation(x + mapPanel.getUnit(), y);
				break;
			}
		}
	}
}