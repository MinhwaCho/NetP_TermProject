import javax.swing.JLabel;

public class Score{
	
	private JLabel scoreLabel;			// score 표시할 JLabel
	private int score = 0;
	
	public Score(JLabel scoreLabel) {
		this.scoreLabel = scoreLabel;
	}
	
	// 점수 update
	public void update() {
		scoreLabel.setText("현재 점수 : " + score + " 점");
	}

	public void addScore(int score) {
		this.score += score;
	}
	
	public void delScore(int score) {
		// 최저 점수는 0점이다.
		if (this.score - score <= 0)
			score = 0;
		else
			this.score -= score;
	}
	
	public int getScore() {
		return score;
	}
}
