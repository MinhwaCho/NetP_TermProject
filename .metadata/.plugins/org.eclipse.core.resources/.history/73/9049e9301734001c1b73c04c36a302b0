import java.awt.Container;
import java.awt.event.KeyAdapter;
import java.awt.event.KeyEvent;

import javax.swing.JFrame;
import javax.swing.JLabel;

public class GameView extends JFrame{
	
	private final int MAPNUM = 1;		// 임시로 1로 설정 : 방마다 다르게 해보기
	
	private Container container;
	private MapPanel mapPanel;
	
	private JLabel player = new JLabel("★");
	
	// JFrame 생성 : Swing Frame
	public GameView() {
		// 기본 설정
		setTitle("SinglePlay Test");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		container = getContentPane();
		container.setLayout(null);
		
		// Map 붙이기 : (0, 0) ~ (400, 400)
		mapPanel = new MapPanel(MAPNUM);
		mapPanel.setLocation(0, 0);
		mapPanel.setSize(mapPanel.getRow()*mapPanel.getUnit(), mapPanel.getCol()*mapPanel.getUnit());
		//container.add(mapPanel);
		
		// Player 붙이기
		container.addKeyListener(new PlayerKeyboardListener());
		player.setLocation(20, 0);
		player.setSize(20, 20);
		container.add(player);
		
		// Frame 크기 설정
		setSize(900, 500);
		setResizable(false);
		setVisible(true);
		
		// focus 지정
		container.setFocusable(true);
		container.requestFocus();
	}

	class PlayerKeyboardListener extends KeyAdapter{
		private int checkXY(int x, int y) {
			return mapPanel.getXY(x/mapPanel.getUnit(), y/mapPanel.getUnit());
		}
		
		public void keyPressed(KeyEvent e) {
			int x = player.getX();
			int y = player.getY();
			int keyCode = e.getKeyCode();
			
			switch(keyCode) {
			case KeyEvent.VK_UP:
				System.out.println(x + ", " + y);
				if(checkXY(x, y) != 1)
					player.setLocation(player.getX(), player.getY() + mapPanel.getUnit());
				break;
			case KeyEvent.VK_DOWN:
				System.out.println(player.getX() + ", " + player.getY());
				if(mapPanel.getXY(player.getX()/mapPanel.getUnit(), player.getY()/mapPanel.getUnit()) != 1)
					player.setLocation(player.getX(), player.getY() - mapPanel.getUnit());
				break;
			case KeyEvent.VK_LEFT:
				System.out.println(player.getX() + ", " + player.getY());
				if(mapPanel.getXY(player.getX()/mapPanel.getUnit(), player.getY()/mapPanel.getUnit()) != 1)
					player.setLocation(player.getX() - mapPanel.getUnit(), player.getY());
				break;
			case KeyEvent.VK_RIGHT:
				System.out.println(player.getX() + ", " + player.getY());
				if(mapPanel.getXY(player.getX()/mapPanel.getUnit(), player.getY()/mapPanel.getUnit()) != 1)
					player.setLocation(player.getX() + mapPanel.getUnit(), player.getY());
				break;
			}
		}
	}
}
